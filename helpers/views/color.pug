html
  head
    title Color Tester
    style.
      body {
        font-family: sans-serif;
        font-weight: 400;
      }

      .blocks {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .block {
        border-radius: 10px;
        height: 50px;
        width: 50px;
        font-size: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Arial, Helvetica, sans-serif;
        border: none;
        cursor: pointer;
      }

      .block:hover {
        transition: 250ms opacity;
        opacity: 0.5;
      }
body
  h1 Colors

  h2 Yes
  .blocks
    each color in colors.yes
      form(method="post" action=`/colors/${color}`)
        button.block(style=`background-color: #${color}` draggable="true" dragend="onDragEnd(color)")=color
  h2 No
  .blocks
    each color in colors.no
      form(method="post" action=`/colors/${color}`)
        button.block(style=`background-color: #${color}` draggable="true" dragend="onDragEnd(color)")=color

  h1 Gradients

  script(src="color.js")